<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.muraliyashu.hellomessenger.TabbedActivity">


    <ListView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/statusList"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_above="@+id/no_contacts"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/no_contactstext"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textSize="22dp"
        android:text="You have no contacts to display, Refer this application to chat...!!!"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/no_contacts"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/no_contacts"/>

    </RelativeLayout>