<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.muraliyashu.hellomessenger.TabbedActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/chatroomlist"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_above="@+id/no_chats"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/no_chatstext"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_margin="20dp"
        android:text="You have no chats to display...!!!"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/no_chats"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/no_chats"/>

</RelativeLayout>
